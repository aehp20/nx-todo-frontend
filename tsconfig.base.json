{
  "compileOnSave": false,
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nx-todo-frontend/api": ["libs/api/src/index.ts"],
      "@nx-todo-frontend/design-system": ["libs/design-system/src/index.ts"],
      "@nx-todo-frontend/hooks": ["libs/hooks/src/index.ts"],
      "@nx-todo-frontend/i18n": ["libs/i18n/src/index.ts"],
      "@nx-todo-frontend/models": ["libs/models/src/index.ts"],
      "@nx-todo-frontend/query": ["libs/query/src/index.ts"],
      "@nx-todo-frontend/theme": ["libs/theme/src/index.ts"],
      "@nx-todo-frontend/utils": ["libs/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
